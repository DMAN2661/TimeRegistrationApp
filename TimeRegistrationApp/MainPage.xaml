<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeRegistrationApp.MainPage">

    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <StackLayout>

            <!-- Combobox -->
            <Label Text="Select Project:" />
            <Picker Margin="0" x:Name="ProjectPicker">
            </Picker>

            <!-- Employee ID Input Field -->
            <Label Text="Employee ID:" />
            <Entry Placeholder="Enter Employee ID" Margin="0" x:Name="EmployeeIdEntry" />

            <!-- Minutes Input Field -->
            <Label Text="Minutes:" />
            <Entry Placeholder="Enter Minutes" Margin="0" x:Name="MinutesEntry" />

            <!-- Add Time Button -->
            <Button Text="Add Time" Margin="10" Clicked="AddTimeBtn" />
            
            
        </StackLayout>
    </Grid>

</ContentPage>
